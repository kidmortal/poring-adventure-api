generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:../../../dev.db"
}

model User {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  name              String
  silver            Int                @default(20)
  admin             Boolean            @default(false)
  appearance        Appearance?
  guildMember       GuildMember?
  stats             Stats?
  profession        Profession?        @relation(fields: [professionId], references: [id])
  professionId      Int?
  Party             Party?             @relation(fields: [partyId], references: [id])
  partyId           Int?
  equipment         EquippedItem[]
  inventory         InventoryItem[]
  market            MarketListing[]
  mail              Mail[]
  learnedSkills     LearnedSkill[]
  buffs             UserBuff[]
  guildApplications GuildApplication[]
  purchases         UserPurchase[]
  discord           Discord?
}

model Discord {
  id        Int    @id @default(autoincrement())
  discordId String @unique
  name      String
  url       String
  user      User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail String @unique
}

model Stats {
  id         Int    @id @default(autoincrement())
  level      Int    @default(1)
  experience Int    @default(1)
  health     Int    @default(20)
  maxHealth  Int    @default(20)
  mana       Int    @default(20)
  maxMana    Int    @default(20)
  attack     Int    @default(1)
  str        Int    @default(1)
  agi        Int    @default(1)
  int        Int    @default(1)
  user       User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail  String @unique
}

model InventoryItem {
  id            Int            @id @default(autoincrement())
  stack         Int
  user          User           @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail     String
  item          Item           @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId        Int
  marketListing MarketListing?

  @@unique([userEmail, itemId])
}

model EquippedItem {
  id        Int    @id @default(autoincrement())
  user      User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail String
  item      Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    Int

  @@unique([userEmail, itemId])
}

model Appearance {
  id        Int    @id @default(autoincrement())
  head      String
  gender    String
  costume   String
  user      User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail String @unique
}

model Head {
  id     Int    @id @default(autoincrement())
  name   String
  gender String
  image  String

  @@unique([name, gender])
}

model MarketListing {
  id          Int           @id @default(autoincrement())
  price       Int
  stack       Int
  inventory   InventoryItem @relation(fields: [inventoryId], references: [id], onDelete: Cascade)
  inventoryId Int           @unique
  seller      User          @relation(fields: [sellerEmail], references: [email], onDelete: Cascade)
  sellerEmail String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  expiresAt   DateTime?
}

model Item {
  id        Int             @id @default(autoincrement())
  name      String
  category  String
  image     String
  attack    Int?
  str       Int?
  agi       Int?
  int       Int?
  health    Int?
  mana      Int?
  equipped  EquippedItem[]
  inventory InventoryItem[]
  drop      Drop[]
  mail      Mail[]
}

model Drop {
  id        Int     @id @default(autoincrement())
  chance    Int
  minAmount Int     @default(1)
  maxAmount Int     @default(1)
  monster   Monster @relation(fields: [monsterId], references: [id])
  monsterId Int
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    Int

  @@unique([monsterId, itemId])
}

model Monster {
  id     Int     @id @default(autoincrement())
  name   String
  image  String
  level  Int     @default(1)
  boss   Boolean @default(false)
  attack Int     @default(1)
  health Int     @default(1)
  silver Int     @default(1)
  exp    Int     @default(1)
  drops  Drop[]
  map    Map     @relation(fields: [mapId], references: [id])
  mapId  Int     @default(1)
}

model Map {
  id        Int         @id @default(autoincrement())
  name      String
  image     String
  monster   Monster[]
  guildTask GuildTask[]
}

model Party {
  id          Int    @id @default(autoincrement())
  leaderEmail String @unique
  members     User[]
}

model Profession {
  id      Int     @id @default(autoincrement())
  name    String
  costume String  @default("none")
  attack  Int     @default(1)
  health  Int     @default(1)
  mana    Int     @default(1)
  str     Int     @default(1)
  agi     Int     @default(1)
  int     Int     @default(1)
  skills  Skill[]
  user    User[]
}

model Skill {
  id            Int            @id @default(autoincrement())
  requiredLevel Int            @default(1)
  manaCost      Int            @default(1)
  cooldown      Int            @default(1)
  category      String         @default("target_enemy")
  effect        String?
  name          String
  image         String
  description   String         @default("Skill Description")
  attribute     String
  multiplier    Int            @default(1)
  profession    Profession     @relation(fields: [professionId], references: [id])
  professionId  Int
  learnedSkill  LearnedSkill[]
  buff          Buff?          @relation(fields: [buffId], references: [id])
  buffId        Int?
}

model LearnedSkill {
  id           Int     @id @default(autoincrement())
  user         User    @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail    String
  skill        Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId      Int
  masteryLevel Int     @default(1)
  equipped     Boolean @default(false)

  @@unique([userEmail, skillId])
}

model Mail {
  id         Int      @id @default(autoincrement())
  sender     String
  content    String
  claimed    Boolean  @default(false)
  silver     Int?     @default(0)
  item       Item?    @relation(fields: [itemId], references: [id])
  itemId     Int?
  itemStack  Int?
  visualized Boolean
  user       User     @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail  String
  createdAt  DateTime @default(now())
}

model UserBuff {
  id        Int    @id @default(autoincrement())
  buff      Buff   @relation(fields: [buffId], references: [id])
  buffId    Int
  user      User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail String
  duration  Int

  @@unique([userEmail, buffId])
}

model Buff {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  effect   String     @default("none")
  duration Int
  image    String
  pose     String     @default("default")
  persist  Boolean    @default(false)
  maxStack Int        @default(1)
  userBuff UserBuff[]
  skill    Skill[]
}

model Guild {
  id                Int                @id @default(autoincrement())
  name              String             @unique
  leaderEmail       String             @unique
  imageUrl          String             @default("https://kidmortal.sirv.com/misc/guild_image.png")
  level             Int                @default(1)
  experience        Int                @default(0)
  taskPoints        Int                @default(0)
  publicMessage     String             @default("Lets have fun")
  internalMessage   String             @default("Lets have fun")
  members           GuildMember[]
  guildApplications GuildApplication[]
  currentGuildTask  CurrentGuildTask?
  blessing          GuildBlessing?
}

model GuildBlessing {
  id      Int   @id @default(autoincrement())
  guild   Guild @relation(fields: [guildId], references: [id])
  guildId Int   @unique
  health  Int   @default(5)
  mana    Int   @default(5)
  str     Int   @default(1)
  int     Int   @default(1)
  agi     Int   @default(1)
}

model CurrentGuildTask {
  id             Int       @id @default(autoincrement())
  task           GuildTask @relation(fields: [guildTaskId], references: [id])
  guildTaskId    Int
  remainingKills Int
  guild          Guild     @relation(fields: [guildId], references: [id])
  guildId        Int       @unique
}

model GuildTask {
  id               Int                @id @default(autoincrement())
  name             String             @unique
  target           Map                @relation(fields: [mapId], references: [id])
  mapId            Int
  killCount        Int                @default(10)
  taskPoints       Int                @default(10)
  currentGuildTask CurrentGuildTask[]
}

model GuildMember {
  id              Int    @id @default(autoincrement())
  role            String @default("member")
  permissionLevel Int    @default(0)
  contribution    Int    @default(0)
  guildTokens     Int    @default(0)
  user            User   @relation(fields: [userEmail], references: [email])
  userEmail       String @unique
  guild           Guild? @relation(fields: [guildId], references: [id])
  guildId         Int?

  @@unique([userEmail, guildId])
}

model GuildApplication {
  id        Int    @id @default(autoincrement())
  user      User   @relation(fields: [userEmail], references: [email])
  userEmail String
  guild     Guild  @relation(fields: [guildId], references: [id])
  guildId   Int
}

model UserPurchase {
  id             Int          @id @default(autoincrement())
  transactionId  String       @unique
  appUserId      String
  received       Boolean      @default(false)
  refunded       Boolean      @default(false)
  createdAt      DateTime     @default(now())
  product        StoreProduct @relation(fields: [storeProductId], references: [id])
  storeProductId Int
  user           User         @relation(fields: [userEmail], references: [email])
  userEmail      String
}

model StoreProduct {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  displayName   String         @unique
  userPurchases UserPurchase[]
}
